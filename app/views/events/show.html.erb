    <div id="main" role="main">
      <div class="wrapper">
        <h1 class="event-title"><span>EVENT : </span><%= @event.title %></h1><!-- /.event-title -->
        <div class="event-details">
          <ul class="reset">
            <li><i class="calendar"></i><%= @event.date %><span><%= @event.date.strftime('%A') %></span></li>
            <li><i class="clock"></i><%= @event.time.strftime('%l:%M') %><span><%= @event.time.strftime('%p') %></span></li>
            <li><i class="map-marker"></i><%= @event.street_address_one %><span><%= "#{@event.city}, #{@event.state} #{@event.zipcode}"%></span></li>
          </ul>
        </div><!-- /.event-details -->
