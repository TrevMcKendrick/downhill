          </ul>
        </div><!-- /.share-icon -->
        <div class="clear"></div><!-- /.clear -->
        <div class="event-photo">
          <%= image_tag "psd_html/event-photo.png" %>
        </div><!-- /.event-photo -->
        <div class="event-tickets">
          <div class="labels">
            <div class="left">Ticket</div><!-- /.left -->
            <div class="left">Price</div><!-- /.right -->
          </div><!-- /.labels -->
          <div class="clear"></div><!-- /.clear -->
          <div class="tickets">
            <ul class="reset">
              <% @event.tickets.each do |ticket| %>
                <li>
                  <span class="name"><%= ticket.ticket_type %></span>
                  <span class="price"><%= number_to_currency(stripe_to_display(ticket.price)) %></span>
                  <%= link_to "Add to Cart", new_order_path(:event_id => @event, 'ticket' => ticket.ticket_type), :class => "btn-add" %>
                </li>
              <% end %>
            </ul>
          </div><!-- /.tickets -->
          <div class="icon-cc left">
            <ul class="reset">
              <li><a href="#" class="visa">VISA</a></li>
              <li><a href="#" class="amex">AMEX</a></li>
              <li><a href="#" class="maestro">Maestro</a></li>
              <li><a href="#" class="mastercard">Mastercard</a></li>
            </ul>
          </div><!-- /.icon-cc -->
        </div><!-- /.tickets -->
        <div class="clear"></div><!-- /.clear -->
        <div class="event-descriptions clearfix">
          <ul class="reset left tabs">
            <li class="active"><a href="#tab-1">Getting rad one city at a time<span>Color Me Why?</span></a></li>
