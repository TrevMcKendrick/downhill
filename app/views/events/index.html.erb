<div id="content">
<section id="widget-grid" class="">
        
          <!-- row -->
          <div class="row">
        
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
        
            <div class="jarviswidget jarviswidget-sortable jarviswidget-color-blueLight" id="wid-id-0" data-widget-fullscreenbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-colorbutton="false"  data-widget-editbutton="false" role="widget" style="" data-widget-attstyle="jarviswidget-color-green">

              <header role="heading">
                  <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                  <h2>All Events</h2>
              </header>
        
                <!-- widget div-->
                <div role="content">
  
                  <!-- widget content -->
                  <div class="widget-body no-padding">

                  <% if @events.blank? %>
                    <br>
                    <h1 style="font-size:30px; margin-left: 10px;">You haven't created any events yet.</h1>
                    <h4 style="font-size:15px; margin-left: 10px;">Make your first by clicking the "Create an Event" button below!</h4>
                    <br>
                  <% else %>

                     
                    <div class="dt-wrapper">
                      <table id="dt_basic" class="table table-striped table-bordered table-hover dataTable" aria-describedby="dt_basic_info">
                      <thead>
                        <tr role="row">
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" style="width: 150px;">Event</th>
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" style="width: 150px;">Event Preview link</th>
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Phone: activate to sort column ascending" style="width: 126px;">Date</th>
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Company: activate to sort column ascending" style="width: 110px;">Tickets Sold</th>
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Zip: activate to sort column ascending" style="width: 83px;">Live?</th>
                        </tr>
                      </thead>
                      <tbody role="alert" aria-live="polite" aria-relevant="all">
                      <% @events.each do |event| %> 
                          <tr class="<%= cycle("odd", "even") -%>">
                            <td class=" "><%= link_to event.title, edit_event_path(event) %></td>
                            <td class=" "><%= link_to "Preview Event Page", event_path(event), :target => '_blank' %></td>
                            <td class=" "><%= event.date.strftime("%B %d, %Y") unless event.date.nil? %></td>
                            <td class=" "><%= event.users.where(:type => "Participant").count %></td>
                            <td class=" "><% if event.published %>
                                          <%= "Yes" %>
                                          <% else %> 
                                          <%= "No" %>
                                          <% end %> </td>
                          </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                
              
                  <% end %>

                    </div></div>

                    <%= button_to "Create an Event", new_event_url, :method => "get", :class => "btn btn-success btn-lg pull-left header-btn hidden-mobile" %>
        
                  </div>
                  <!-- end widget content -->
        
                </div>
                <!-- end widget div -->
        
              </div>
            </article>
            <!-- WIDGET END -->
        
          </div>
        
          <!-- end row -->
        
        </section>

      </div>  