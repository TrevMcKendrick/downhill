<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, :placeholder => "Event name", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :path, "Extension" %>
  <%= f.text_field :path, :placeholder => "e.g. denver-july-2013", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :date, "Date" %>
  <%= f.date_field :date, :format => "MM-dd-yyyy", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :time, "Time" %>
  <%= f.time_field :time, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :timezone, "Time Zone" %>
  <%= f.collection_select :timezone, ActiveSupport::TimeZone.us_zones, :name, :to_s, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, :cols => "50", :rows => "5", :placeholder => "Event description", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :waiver, "Waiver text" %>
  <%= f.text_area :waiver, :cols => "50", :rows => "3", :placeholder => "Text so you don't get sued", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :street_address_one, "Street Address" %>
  <%= f.text_field :street_address_one, :placeholder => "123 Parkway", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :street_address_two, "Street Address" %>
  <%= f.text_field :street_address_two, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city, :placeholder => "Mountain View", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :state %>
  <%= f.text_field :state, :placeholder => "CA", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode, :placeholder => "94806", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :google_maps_iframe, "Google Maps Embed Link" %>
  <%= f.text_field :google_maps_iframe, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :support_email, "Support contact email address" %>
  <%= f.text_field :support_email, :placeholder => "sally@amazingrace.com", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :volunteer_coordinator_email %>
  <%= f.text_field :volunteer_coordinator_email, :placeholder => "volunteer_lead@amazingrace.com", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :receipt_html, "Receipt sent after signups" %>
  <%= f.text_area :receipt_html, :class => "form-control editor", :rows => "5" %>
  <br><br><br>
</div>

<div class="form-group">
  <%= f.label :packet_pickup_info_html, "Packet pickup info" %>
  <%= f.text_area :packet_pickup_info_html, :class => "form-control editor", :rows => "5" %>
  <br><br><br>
</div>

<div class="form-group">
  <%= f.label :race_day_info_html, "Race day info" %>
  <%= f.text_area :race_day_info_html, :class => "form-control editor", :rows => "5" %>
</div>

<div class="form-group">
  <%= f.label :published, "Publish event?" %>
  <%= f.select :published, [["Not published",false], ["Published",true]], :class => "form-control editor" %>
  <br><br><br>
</div>