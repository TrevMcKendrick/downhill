<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, :placeholder => "Event name", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :date, "Date" %>
  <%= f.date_field :date, :format => "MM-dd-yyyy", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :time, "Time" %>
  <%= f.time_field :time, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :timezone, "Time Zone" %><br>
  <%= f.collection_select :timezone, ActiveSupport::TimeZone.us_zones, :name, :to_s, :class => "form-control" %>
</div>