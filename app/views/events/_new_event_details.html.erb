<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, :placeholder => "Event name", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :date, "Date" %><br>
  <% if @event.date %>
    <%= f.text_field :date, :format => "MM-dd-yyyy", :class => "form-control datepicker", :value => @event.date.strftime("%m/%d/%Y") %>
  <% else %>
    <%= f.text_field :date, :format => "MM-dd-yyyy", :class => "form-control datepicker" %>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :time, "Start Time" %>
  <%= f.text_field :time, :class => "form-control timepicker" %>
</div>

<div class="form-group">
  <%= f.label :timezone, "Time Zone" %><br>
  <%= f.collection_select :timezone, ActiveSupport::TimeZone.us_zones, :name, :to_s, :class => "form-control" %>
</div>
