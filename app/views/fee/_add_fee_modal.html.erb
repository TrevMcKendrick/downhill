
<div class="modal fade in" id="feeModal" tabindex="-1" role="dialog" style="display: none;" aria-hidden="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          Ã—
        </button>
        <h4 class="modal-title">
          Create Ticket
        </h4>
      </div>
      <div class="modal-body no-padding">

          <%= form_for @fee, :url => { :action => :create }, html: {:class => "smart-form"} do |f| %>
              <fieldset>
          
                <section>
                  <div class="row">
                    <%= f.label :name, :class => "label col col-2" %>
                    <div class="col col-10">
                      <label class="input"> <i class="icon-append fa fa-ticket"></i>
                        <%= f.text_field :name, :placeholder => "e.g. Convenience" %>
                      </label>
                    </div>
                  </div>
                </section>

                <section>
                  <div class="row">
                    <%= f.label :amount, :class => "label col col-2" %>
                    <div class="col col-10">
                      <label class="input"> <i class="icon-append fa fa-money"></i>
                        <%= f.text_field :amount, :placeholder => "$2.50" %>
                      </label>
                    </div>
                  </div>
                </section>

              </fieldset>
              
              <footer>
                <%= f.submit "Create Fee", :class => "btn btn-primary" %>
              </footer>
              <% end %>
            </form>           
            

      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
