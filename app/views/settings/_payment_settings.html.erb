<% if stripe_set_up? %>
  <%= "Your Stripe account is setup and accepting payments." %><br>
  <%= link_to "Visit your Stripe account", "https://manage.stripe.com/dashboard" %>
<% else %>
  <%= link_to image_tag("stripe.png"), "https://connect.stripe.com/oauth/authorize?response_type=code&client_id=#{STRIPE_CLIENT_ID}&scope=read_write&state=1234" %><br><br>
<% end %>