<%= render "layouts/event_header" %>

<%= form_for @ticket do |f| %>

  <div class="form-group">
    <%= f.label :ticket_type, "Ticket type" %>
    <%= f.text_field :ticket_type, :placeholder => "e.g. Volunteer", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_area :price, :placeholder => "45.95", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :for_sale_begin, "Ticket goes on sales on:" %>
    <%= f.text_area :for_sale_begin, :placeholder => "11/08/2014", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :for_sale_end, "Ticket stops selling on:" %>
    <%= f.text_area :for_sale_end, :placeholder => "11/30/2014", :class => "form-control" %>
  </div>

  <%= f.submit "Save Changes", :class => "btn btn-primary" %>

<% end %>