<%= render "layouts/event_header" %>
  <%= form_for(@referral_code) do |f| %>

  <div class="form-group">
    <%= f.label :name, :class => "wlabel" %>
    <%= f.text_field :name, :name => "referral_code[name]", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :discount_type, :class => "wlabel" %>
    <%= f.select :discount_type, [["Percent","percent"], ["Flat rate", "flat_rate"]], :class => "form-control editor" %>
  </div>

  <div class="form-group">
     <%= f.label :code, :class => "wlabel" %>
     <%= f.text_field :code, :name => "referral_code[code]", :class => "form-control" %>
  </div>

  <div class="form-group">
     <%= f.label :amount, :class => "wlabel" %>
     <%= f.text_field :amount, :name => "referral_code[amount]", :class => "form-control" %>
  </div>

  <%= f.submit "Save Changes", :class => "btn btn-primary" %>

<% end %>