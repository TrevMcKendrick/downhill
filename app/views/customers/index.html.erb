<section id="widget-grid" class="">
        
          <!-- row -->
          <div class="row">
        
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
        
            <div class="jarviswidget jarviswidget-sortable jarviswidget-color-blueLight" id="wid-id-0" data-widget-fullscreenbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-colorbutton="false"  data-widget-editbutton="false" role="widget" style="" data-widget-attstyle="jarviswidget-color-green">

              <header role="heading">
                  <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                  <h2>All customer</h2>
              </header>
        
                <!-- widget div-->
                <div class="input-group input-group-lg hidden-mobile">

                  <%= form_tag customers_path, :method => 'get' do %>
                    <p>
                      <%= text_field_tag :search, params[:search], :class => "form-control", :style => "width:50%;", :placeholder => "Type a name to search" %>
                      <%= submit_tag "Search", :name => nil, :class => "btn btn-default" %>
                    </p>
                  <% end %>
             
                </div>

                <div role="content">
                  <!-- widget content -->
                  <div class="widget-body no-padding">
                    
                    <div class="dt-wrapper">
                      <table id="dt_basic" class="table table-striped table-bordered table-hover dataTable" aria-describedby="dt_basic_info">
                      <thead>
                        <tr role="row">
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" style="width: 150px;">Name</th>
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" style="width: 150px;">Email</th>
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Phone: activate to sort column ascending" style="width: 126px;">Phone #</th>
                          <th class="sorting" role="columnheader" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label="Company: activate to sort column ascending" style="width: 110px;">Stripe Account</th>
                        </tr>
                      </thead>
                      <tbody role="alert" aria-live="polite" aria-relevant="all">
                      <% @customers.each do |customer| %> 
                          <tr class="<%= cycle("odd", "even") -%>">
                            <td class=" "><%= link_to customer.first_name, customer_path(customer) %></td>
                            <td class=" "><%= link_to customer.email, customer_path(customer)  %></td>
                            <td class=" "><%= customer.phone %></td>
                            <td class=" "><%= link_to "See customer in Stripe", "https://manage.stripe.com/customers/#{customer.stripe_participant_id}" %></td>
                          </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                
              
                    </div></div>
        
                  </div>
                  <!-- end widget content -->
        
                </div>
                <!-- end widget div -->
        
              </div>
            </article>
            <!-- WIDGET END -->
        
          </div>
        
          <!-- end row -->
        
        </section>