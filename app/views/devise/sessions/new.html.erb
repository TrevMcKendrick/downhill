<%= render "devise/registrations/navbar" %>

<div style="width:100%">

  <div class="centerize" id="sign_up_container">
    <h2 id="headline">Sign in</h2>
      <div class="centerize" id="sign_up_box">

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        
          <div class="form-group">
            <%= f.email_field :email, :autofocus => true, :class => "centerize login_field", :placeholder => "Email Address" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, :class => "centerize login_field", :placeholder => "Password"  %>
          </div>

          <div>
            <%= f.submit "Sign in", :class => "btn btn-primary" %>
          </div>

          <% end %>
          <div class="login_link">
            <%= render "devise/shared/links" %>
          </div>
      </div>
  </div>

</div>          


