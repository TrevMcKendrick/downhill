<%= render 'navbar' %>

<div style="width:100%">

  <div class="centerize" id="sign_up_container">
    <h2 id="headline">Organize Themed Races. Sign up for free!</h2>
      <div class="centerize" id="sign_up_box">

          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.email_field :email, :autofocus => true, :class => "centerize login_field", :placeholder => "Email Address" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, :class => "centerize login_field", :placeholder => "Password"  %>
            </div>

            <div class="form-group">
              <%= f.text_field :subdomain, :class => "centerize login_field", :placeholder => "Subdomain"  %>
            </div>

            <div class="centerize">
              <%= f.submit "Sign up", :class => "btn-primary btn" %>
            </div>
            
          <% end %>

          <div class="login_link">
            <%= render "devise/shared/links" %>
          </div>

      </div>
  </div>          
</div>

