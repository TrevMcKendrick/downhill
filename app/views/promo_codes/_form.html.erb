<%= render "layouts/event_header" %>
  <%= form_for(@promo_code) do |f| %>

  <div class="form-group">
    <%= f.label :description, :class => "wlabel" %>
    <%= f.text_field :description, :name => "promo_code[description]", :class => "form-control" %>
  </div>

<!--   <div class="form-group">
    <%= f.label :discount_type, :class => "wlabel" %>
    <%= f.select :discount_type, [["Percent","percent"], ["Flat rate", "flat_rate"]], :class => "form-control editor" %>
  </div> -->

  <div class="form-group">
     <%= f.label :code, :class => "wlabel" %>
     <%= f.text_field :code, :name => "promo_code[code]", :class => "form-control" %>
  </div>

  <div class="form-group">
     <%= f.label :amount, :class => "wlabel" %>
     <%= f.text_field :amount, :name => "promo_code[amount]", :class => "form-control", :value => (@promo_code.amount / 100.000) %>
  </div>

  <div class="form-group">
     <%= f.label :number_of_codes, :class => "wlabel" %>
     <%= f.text_field :quantity, :name => "promo_code[quantity]", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :published, :class => "wlabel" %>
    <%= f.select :published, [["Not published",false], ["Published",true]], :class => "form-control editor" %>
  </div>

  <%= f.submit "Save Changes", :class => "btn btn-primary" %>

<% end %>