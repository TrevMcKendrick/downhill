$(document).ready(function() {
  $('#sales_date_range').daterangepicker(
  { 
    ranges: {
         'Today': [moment(), moment()],
         'Yesterday': [moment().subtract('days', 1), moment().subtract('days', 1)],
         'Last 7 Days': [moment().subtract('days', 6), moment()],
         'Last 30 Days': [moment().subtract('days', 29), moment()],
         'This Month': [moment().startOf('month'), moment().endOf('month')],
         'Last Month': [moment().subtract('month', 1).startOf('month'), moment().subtract('month', 1).endOf('month')]
      },
      startDate: moment().subtract('days', 13),
      endDate: moment()
  },
  function(start, end, label) {
    var now = new Date();
    now.setHours(0);
    now.setMinutes(0);
    now.setSeconds(0);

    var start_days_ago = Math.floor((now - start) / 86400000);
    var end_days_ago = Math.floor((now - end) / 86400000);

    var path = '?start_day=' + start_days_ago + '&end_day=' + end_days_ago
    window.location = path;
  }

);

});